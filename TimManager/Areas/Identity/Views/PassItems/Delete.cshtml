@model PassItem
@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">PassItem</li>

            <li class="breadcrumb-item">
                <a asp-action="Index">Back to List</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>PassItem</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

            @if (Model.Uri.Has())
            {
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Uri)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Uri)</dd>
            }

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Created)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Created)</dd>

            @if (Model.Modified.HasValue)
            {
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modified)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Modified)</dd>
            }

            @if (Model.Description.Has())
            {
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" rows="3" readonly>
                            <!--Description-->
                </textarea>
                </dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>
</div>