@model IEnumerable<PassItem>
@{
    ViewBag.Title = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Uri)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.Created)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Details", new { id = item.Id }, new { @class = "" })</td>

                    <td>
                        <div class="btn-copy" onclick="copyToClipboard('@item.UserName');">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </div>
                    </td>

                    <td>
                        <a class="" href="@item.Uri">@item.Uri</a>
                    </td>

                    <td>
                        <div class="PasswordCopyToClipboardById btn-copy" data-itemId="@item.Id">************</div>
                    </td>

                    <td>@Html.DisplayFor(modelItem => item.Created)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        var passwordCopyToClipboardById = document.querySelectorAll(".PasswordCopyToClipboardById");

        passwordCopyToClipboardById.forEach(item => {
            item.addEventListener("click", () => {
                let itemId = item.getAttribute("data-itemId");
                const toClickboard = copyToClipboard(itemId);
                console.log(itemId);
            });
        })
    </script>
}
